@model MovieRentalManagementSystem.ViewModel.MovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
@using (Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Movie.Name)
        @Html.TextBoxFor(s => s.Movie.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(s=>s.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Movie.ReleaseDate)
        @Html.TextBoxFor(s => s.Movie.ReleaseDate,"{0:d MMM yyyy}", new {@class = "form-control"})
        @Html.ValidationMessageFor(s=>s.Movie.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Movie.AddedDate)
        @Html.TextBoxFor(s => s.Movie.AddedDate, "{0:d MMM yyyy}", new {@class = "form-control"})
        @Html.ValidationMessageFor(s=>s.Movie.AddedDate)
    </div>
    <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(s => s.Movie.GenreId)
            @Html.DropDownListFor(s => s.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select", new {@class = "form-control"})
        </div>

    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Movie.Stock)
        @Html.TextBoxFor(s => s.Movie.Stock, new {@class = "form-control"})
        @Html.ValidationMessageFor(s=>s.Movie.Stock)
    </div>

    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

