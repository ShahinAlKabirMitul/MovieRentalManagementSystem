@model List<MovieRentalManagementSystem.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div >
   
    <button class="btn btn-info btn-lg" type="submit" onclick="location.href='@Url.Action("New", "Movie")'">Add Movie</button>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Genres</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var m in Model)
        {

            <tr>
                <td>
                    
                    @Html.ActionLink(m.Name, "Edit", new { id = m.Id })
                </td>
                <td> @m.Genre.Name </td>
            </tr>
        }


    </tbody>
</table>

