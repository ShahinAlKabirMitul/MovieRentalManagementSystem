@model MovieRentalManagementSystem.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name </li>
    <li>ReleaseDate: @Model.ReleaseDate.ToLongDateString() </li>
    <li>AddedDate: @Model.AddedDate.ToLongDateString() </li>
    <li>Stock: @Model.Stock </li>
</ul>

